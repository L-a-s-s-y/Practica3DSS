<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MapView para mostrar el mapa -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <!-- Botón para centrar la ubicación del usuario -->
    <Button
        android:id="@+id/btn_center_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centrar Usuario"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true" />

    <!-- Botón para mostrar ubicaciones de almacenes -->
    <Button
        android:id="@+id/btn_show_stores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Almacenes"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>